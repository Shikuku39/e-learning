    <main id="remark" class="container">
        <form action="/remark/<%= resource %>/<%= username %>" method="post">
            <h1>Remarks</h1>
            <p><i>Your remarks will be highly appreciated and benefitial to the development of this tool</i></p>
            <div>
                <label for="">What are your thoughts about the paper?</label>
                <textarea name="remark" id="remarkText" cols="30" rows="10" placeholder="Your message ..." required autocomplete="off"></textarea>
            </div>
            <input type="submit" value="Send Remark">
        </form>        
    </main>
