<%- include('partials/header') %>
    <%- include('partials/preloader')%>
    <%- include('partials/nav') %>
    <main id="addresource" class="container">
        <div>
            <form action="/addresource" method="post" enctype="multipart/form-data">
                <h1>Add Resource</h1>
                <div class="form-input">
                    <label for="">Resource Title</label>
                    <input type="text" name="rsctitle" id="" required>
                </div>
                <div class="form-input">
                    <label for="">Brief Resource Definition</label>
                    <input type="text" name="learndefinition" id="" required>
                </div>
                <div class="form-input">
                    <label for="">Resource code (no spacing)</label>
                    <input type="text" name="resource" id="" required>
                </div>
                <div class="form-input">
                    <label for="">File Name (pdf only)</label>
                    <input type="file" name="route" id="" required accept=".pdf">
                </div>
                <input type="submit" value="Add Resource"><br>
                <a href="/viewresource">Cancel</a>
            </form>
    </main>
<%- include('partials/footer') %>